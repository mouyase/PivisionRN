{
  // 禁用内置CSS验证，使用ESLint等工具替代
  "css.validate": false,
  // 文件保存时自动执行ESLint修复
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // 设置默认格式化程序为ESLint
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  // 保存时自动格式化文件
  "editor.formatOnSave": true,
  // 启用ESLint格式化功能
  "eslint.format.enable": true,
  // 文件搜索时排除的目录和文件
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  // JavaScript导入路径偏好设置：使用非相对路径
  "javascript.preferences.importModuleSpecifier": "non-relative",
  // JavaScript导入路径结尾偏好设置：最小化
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  // 文件移动时自动更新导入路径
  "javascript.updateImportsOnFileMove.enabled": "always",
  // 粘贴代码时自动更新导入路径
  "javascript.updateImportsOnPaste.enabled": true,
  // 搜索时排除的目录和文件
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  // TailwindCSS类名属性识别
  "tailwindCSS.classAttributes": [
    "style"
  ],
  // TailwindCSS类名函数识别
  "tailwindCSS.classFunctions": [
    "tw",
    "tw.color",
    "tw.style"
  ],
  // TypeScript导入路径偏好设置：使用非相对路径
  "typescript.preferences.importModuleSpecifier": "non-relative",
  // TypeScript导入路径结尾偏好设置：最小化
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  // 指定TypeScript服务器路径
  "typescript.tsdk": "node_modules/typescript/lib",
  // 文件移动时自动更新导入路径
  "typescript.updateImportsOnFileMove.enabled": "always",
  // 粘贴代码时自动更新导入路径
  "typescript.updateImportsOnPaste.enabled": true,
  // 启用TypeScript验证
  "typescript.validate.enable": true,
  // 禁用自动从package.json导入
  "typescript.preferences.includePackageJsonAutoImports": "off",
  // 启用自动导入建议
  "typescript.suggest.autoImports": true,
  // 禁用TypeScript调查问卷
  "typescript.surveys.enabled": false,
  // 禁用自动可选链补全
  "typescript.suggest.includeAutomaticOptionalChainCompletions": false,
  // 参数名内联提示设置：仅显示字面量
  "typescript.inlayHints.parameterNames.enabled": "literals",
  // 禁用变量类型内联提示
  "typescript.inlayHints.variableTypes.enabled": false,
  // 禁用函数返回类型内联提示
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  // 禁用属性声明类型内联提示
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  // 禁用参数类型内联提示
  "typescript.inlayHints.parameterTypes.enabled": false,
  // 禁用枚举成员值内联提示
  "typescript.inlayHints.enumMemberValues.enabled": false,
  // JavaScript文件默认格式化程序设置
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // JavaScript React文件默认格式化程序设置
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // JSON文件默认格式化程序设置
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Markdown文件默认格式化程序设置
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // TypeScript文件默认格式化程序设置
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // TypeScript React文件默认格式化程序设置
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}
